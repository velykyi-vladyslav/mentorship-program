<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="eventService"
          class="velykyi.vladyslav.service.impl.EventServiceImpl"
          p:eventDao-ref="eventDao">
    </bean>

    <bean id="userService"
          class="velykyi.vladyslav.service.impl.UserServiceImpl"
          p:userDao-ref="userDao">
    </bean>

    <bean id="ticketService"
          class="velykyi.vladyslav.service.impl.TicketServiceImpl"
    p:ticketDao-ref="ticketDao">
    </bean>

    <bean id="bookingFacade"
          class="velykyi.vladyslav.facade.BookingFacadeImpl">
        <constructor-arg ref="eventService"/>
        <constructor-arg ref="ticketService"/>
        <constructor-arg ref="userService"/>
    </bean>

</beans>